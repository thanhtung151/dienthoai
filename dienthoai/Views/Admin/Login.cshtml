
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Forms</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="~/Content/login/style.css" rel="stylesheet" />
</head>


<body>
    <div class="form-top-left">
        <h4 style="text-align:center">ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</h4>
        <p style="text-align:center"> VUI LÒNG NHẬP TÊN VÀ PASSWORD:</p>
      
    </div>
    <div class="waper">
        <div class="head">ĐĂNG NHẬP </div>

       
        @using (Html.BeginForm())
        {
            <h4 style="color:red; text-align:center">@ViewBag.Thongbao1 </h4>
            @Html.ValidationSummary(true)
            <div class="foc">


                <input type="text" name="username" placeholder="Username" class="form-username form-control" id="form-username">
                @ViewData["loi1"]
            </div>
            <div class="foc">
                <input type="password" name="password"  placeholder="Password"  class="form-password form-control" id="form-password">
                @ViewData["loi2"]
            </div>
            <div class="foc">
                <button  class="btn btn-block"> dang nhap </button>
               
                
            </div>
        }
       

    </div>
</body>
</html>
