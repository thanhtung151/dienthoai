            @Html.ValidationMessageFor(model => model.Ma_Loai_SP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Don_Gia, htmlAttributes: new { @class = "control-label col-md-2" })
