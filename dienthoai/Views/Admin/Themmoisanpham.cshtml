            @Html.ValidationMessageFor(model => model.Don_Gia, "", new { @class = "text-danger" })
        </div>
    </div>  
    <div class="form-group">
        @Html.LabelFor(model => model.Hinh_Anh, new { @class = "control-label col-md-2" })
