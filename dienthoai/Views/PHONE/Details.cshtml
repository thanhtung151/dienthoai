
<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<h3>Thông Tin Chi Tiết Sản Phẩm</h3>
<div>
    <div style="width:20%; float:left; border-left:dotted 1px; border-color:azure">
        <img src="~/Content/image/@Model.Hinh_Anh" width="100%" />
    </div>
    <div style="width:40%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:red">Tên sản phẩm: @Model.Ten_SP</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Cấu Hình:</span>@Model.Cau_Hinh </p>
        <p style="font-weight:bold">Đơn giá: <span style="color:red; font-size:13pt">@Model.Don_Gia VND</span></p>
    </div>
    <div>
    <div id="Datmua">
        <a href="@Url.Action("ThemGiohang", "Giohang", new {@iMa_SP = @Model.Ma_SP, @strURL=Request.Url.ToString()})">
            ĐẶT MUA
        </a>
        </div>
        </div>
</div>


